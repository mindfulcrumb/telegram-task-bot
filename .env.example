# Telegram Bot Token (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Notion Integration Token (get from https://www.notion.so/my-integrations)
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database ID (from your tasks database URL)
# URL looks like: https://notion.so/yourworkspace/DATABASE_ID?v=...
NOTION_DATABASE_ID=your_database_id_here

# Your Telegram User ID (get by messaging @userinfobot on Telegram)
# Comma-separated for multiple users
ALLOWED_USER_IDS=123456789

# How often to check for reminders (in minutes)
REMINDER_CHECK_INTERVAL=5
